{
  "expo": {
    "name": "DutySync",
    "slug": "driver-duty-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "driverdutyapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ampl.driverduty",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "AMPL needs your location to track duty progress.",
        "NSLocationAlwaysUsageDescription": "AMPL tracks your location during active duties.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "AMPL tracks your location during active duties."
      }
    },
    "android": {
      "package": "com.ampl.driverduty",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "ACCESS_BACKGROUND_LOCATION",
        "POST_NOTIFICATIONS",
        "WAKE_LOCK"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIza..."
        }
      },
      "foregroundServiceType": "location",
      "manifestEntries": {
        "android:foregroundServiceType": "location"
      },
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "AMPL needs your location always to track duty progress accurately.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true,
          "foregroundService": {
            "notificationTitle": "AMPL Tracking",
            "notificationBody": "Location tracking is active.",
            "notificationColor": "#2563EB"
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "b6fdfab9-c254-47a2-858a-4ce93515ac27"
      }
    }
  }
}
